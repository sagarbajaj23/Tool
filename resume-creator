            document.getElementById('certifications-section').appendChild(newCertification);
        });
        
        // Print resume
        document.getElementById('print-resume').addEventListener('click', function() {
            window.print();
        });
        
        // Download as PDF
        document.getElementById('download-pdf').addEventListener('click', function() {
            const element = document.getElementById('resume-preview');
            const opt = {
                margin: 10,
                filename: 'my-resume.pdf',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };
            
            // Generate PDF
            html2pdf().set(opt).from(element).save();
        });
        
        // Template buttons in templates section
        document.querySelectorAll('[data-template]').forEach(button => {
            button.addEventListener('click', function() {
                const template = this.dataset.template;
                // Update template selection
                templates.forEach(t => {
                    t.classList.remove('active');
                    if(t.dataset.template === template) {
                        t.classList.add('active');
                    }
                });
                templateSelect.value = template;
                updatePreviewTemplate(template);
                
                // Scroll to editor
                document.getElementById('editor').scrollIntoView({ behavior: 'smooth' });
            });
        });
        
        // Initialize form fields with sample data for demo purposes
        function initializeDemoData() {
            document.getElementById('first-name').value = 'John';
            document.getElementById('last-name').value = 'Doe';
            document.getElementById('profession').value = 'Software Engineer';
            document.getElementById('email').value = 'john.doe@example.com';
            document.getElementById('phone').value = '(123) 456-7890';
            document.getElementById('address').value = '123 Main St, City, Country';
            document.getElementById('summary').value = 'Experienced professional with 5+ years in software development specializing in web applications.';
            document.getElementById('job-title-1').value = 'Senior Developer';
            document.getElementById('company-1').value = 'Tech Corp Inc.';
            document.getElementById('start-date-1').value = 'June 2018';
            document.getElementById('end-date-1').value = 'Present';
            document.getElementById('job-description-1').value = 'Led a team of 5 developers to create innovative web solutions for enterprise clients.';
            document.getElementById('degree-1').value = 'Bachelor of Science in Computer Science';
            document.getElementById('university-1').value = 'State University';
            document.getElementById('edu-start-date-1').value = '2014';
            document.getElementById('edu-end-date-1').value = '2018';
            document.getElementById('edu-description-1').value = 'Graduated with honors. Relevant coursework: Data Structures, Algorithms, Web Development.';
            document.getElementById('skills').value = 'JavaScript, HTML, CSS, React, Node.js, Python';
            
            // Trigger updates
